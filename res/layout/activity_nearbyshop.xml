<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nearbyshop" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
          <ImageView
        android:id="@+id/jeevan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/jeevan" />
          <View 
              android:layout_width="5dp"
              android:layout_height="5dp"/>
            <ImageView
        android:id="@+id/grace"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/grace" />
             <View 
              android:layout_width="5dp"
              android:layout_height="5dp"/>
            <ImageView
        android:id="@+id/nilgiris"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/nilgiri1" />
             <View 
              android:layout_width="5dp"
              android:layout_height="5dp"/>
            <ImageView
        android:id="@+id/srivenkatesh"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/srivenkadeshwara" />
             <View 
              android:layout_width="5dp"
              android:layout_height="5dp"/>
            <ImageView
        android:id="@+id/reliance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/reliance" />
          
    </LinearLayout>

  

</ScrollView>
